/* header */
.header {
    background-color: #5E5E5E;
    color: #fff;
    padding: 10px;
    overflow: hidden;
    margin-bottom: 2px;
}

.header a {
    color: #fff;
}

.header a:hover {
    text-decoration: none;
}

/* footer */
.footer {
    text-align: center;
    font-size: 1.5rem;
    color: #C9C9C9;
}

